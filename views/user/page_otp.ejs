<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Login</title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="/css/mdb.min.css" rel="stylesheet">
  <!-- google font -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@300&display=swap" rel="stylesheet">
  <style>
    html,
    body,
    header,
    .intro-section {
      height: 100%;
    }

    .font {
      font-family: 'Prompt', sans-serif;
    }

    @media (min-width: 560px) and (max-width: 740px) {
      html,
      body,
      header,

      .intro-section {
        height: 470px;
      }

    }

    @media (min-width: 800px) and (max-width: 850px) {

      .navbar:not(.top-nav-collapse) {
        background: #7d8488 !important;
      }

      .navbar {
        box-shadow: 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12) !important;
      }

    }
  </style>

</head>

<body class="agency">
  <header>
    <!-- Video -->
    <section class="view intro-section" id="home">
      <!-- <img src="v" alt="" width="50%"> -->

      <div class="mask rgba-gradient">

        <div class="container">
          <div class="d-flex justify-content-center mt-3">
            <img src="https://raw.githubusercontent.com/Benz-TT/TectonyLineOA/main/KruaZap/Logo%20Krua%20Zapp%20Street%20_New-03.png" style="height: 150px;" class="img-fluid" alt="Responsive image">
          </div>

          <!--Content-->
          <div class="justify-content-center d-flex  align-items-center mt-5">
            <div class="card font" style="background-color: rgba(255, 255, 255, 0.8); width: 90%;">
              <div>
                <div class="tab-content">
                  <div class="tab-pane fade in show active" id="panel7" role="tabpanel">
                    <form action="/otp/verify" method="POST" class="was-validated">
                      <label style="font-size: medium;">กรุณากรอกหมายเลข OTP เพื่อสมัครเป็นสมาชิก</label>
                      <label style="font-size: small;">รหัสความปลอดภัย ( <%= ver %> )</label>
                      <div class="md-form form-sm">
                        <i class="fas fa-user prefix"></i>

                        <input type="hidden" name="id" value="<%= data %>" />
                        <input type="text" name="otp" id="modalLRInput10" class="form-control form-control-sm validate"
                          length="6" maxlength="6" required>
                          
                        <label data-error="wrong" data-success="right" for="modalLRInput10">กรอก OTP 6 หลัก</label>
                      </div>

                      <div class="text-center mt-2">
                        <button type="submit" class="btn btn-info btn-rounded">ยืนยัน</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!--/.Content-->
        </div>
      </div>
    </section>

  </header>
  <!-- Navigation & Intro -->

  <!-- SCRIPTS -->
  <!-- JQuery -->
  <script type="text/javascript " src="/js/jquery-3.4.1.min.js "></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript " src="/js/popper.min.js "></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript " src="/js/bootstrap.min.js "></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript " src="/js/mdb.min.js "></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/0.1.12/wow.min.js"></script>

  <script>
    $(document).ready(function () {

    });

    //Notification 
    toastr.options = {
      "closeButton": true,
      "debug": true,
      "newestOnTop": true,
      "progressBar": true,
      "positionClass": "md-toast-top-center",
      "preventDuplicates": true,
      "onclick": null,
      "showDuration": 300,
      "hideDuration": 1000,
      "timeOut": 5000,
      "extendedTimeOut": 1000,
      "showEasing": "swing",
      "hideEasing": "linear",
      "showMethod": "fadeIn",
      "hideMethod": "fadeOut"
    }
    //check validate
    switch (window.location.search) {
      case '?alert=error-otp':
        toastr.error('OTP ไม่ถูกต้อง');
        break
    }

    // initialize scrollspy
    $('body').scrollspy({
      target: '.dotted-scrollspy'
    });

    // initialize lightbox
    $(function () {

      $("#mdb-lightbox-ui ").load("mdb-addons/mdb-lightbox-ui.html ");
    });

    /* WOW.js init */
    new WOW().init();

    $('.navbar-collapse a').click(function () {
      $(".navbar-collapse ").collapse('hide');
    });

  </script>

</body>

</html>