<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Login</title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="/css/mdb.min.css" rel="stylesheet">
  <!-- google font -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@300&display=swap" rel="stylesheet">
  <style>
    html,
    body,
    header,
    .intro-section {
      height: 100%;
    }

    .font {
      font-family: 'Prompt', sans-serif;
    }

    @media (min-width: 560px) and (max-width: 740px) {
      html,
      body,
      header,

      .intro-section {
        height: 470px;
      }

    }

    @media (min-width: 800px) and (max-width: 850px) {

      .navbar:not(.top-nav-collapse) {
        background: #7d8488 !important;
      }

      .navbar {
        box-shadow: 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12) !important;
      }

    }
  </style>

</head>

<body class="agency">
  <header>
    <!-- Video -->
    <section class="view intro-section" id="home">
      <!-- <video class="video-intro"
        poster="https://mdbootstrap.com/img/Photos/Horizontal/Things/full%20page/img%20%287%29.jpg" playsinline autoplay
        muted loop>
        <source src="https://mdbootstrap.com/img/video/animation-intro.mp4" type="video/mp4">
      </video> -->

      <div class="mask rgba-gradient">

        <div class="container">
          <div class="d-flex justify-content-center mt-3">
            <!-- <img src="/images/logo/logo.png" style="height: 150px;" class="img-fluid" alt="Responsive image"> -->
          </div>

          <!--Content-->
          <div class="justify-content-center d-flex  align-items-center mt-5">
            <div class="card font" style="background-color: rgba(255, 255, 255, 0.8); ">
              <div>
                <div class="bg-info rounded-top"><div class="rounded-top"><h3 class="pt-3 pb-3 text-center text-white ">เข้าสู่ระบบ</h3></div></div>
                <!-- <ul class="nav nav-tabs md-tabs tabs-2 light-blue darken-3 text-center" role="tablist">
                  <h3 class="text-light">สมัครสมาชิก</h3>
                </ul> -->
                <div class="mt-5">
                <form action="/otp/request" method="POST" class="was-validated">
                  <!--Body-->
                  <div class="modal-body">
                    <label style="font-size: medium;">กรุณากรอกหมายเลขโทรศัพท์ของท่านเพื่อรับรหัส OTP</label>
                    <div class="md-form form-sm">
                      <i class="fas fa-user prefix"></i>
                      <input type="text" name="phone" id="phone2" class="form-control form-control-sm" length="10"
                        maxlength="10" required>
                      <label data-error="wrong" data-success="right" for="phone2">เบอร์มือถือ 10
                        หลัก</label>
                    </div>
                    <div class="text-center form-sm mt-2">
                      <button class="btn btn-info btn-rounded"><i class="fas fa-sign-in ml-1">ยืนยัน</i></button>
                    </div>
                  </div>
                </form>
              </div>
              </div>
            </div>
          </div>
          <!--/.Content-->
        </div>
      </div>
    </section>

  </header>
  <!-- Navigation & Intro -->

  <!-- SCRIPTS -->
  <!-- JQuery -->
  <script type="text/javascript " src="/js/jquery-3.4.1.min.js "></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript " src="/js/popper.min.js "></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript " src="/js/bootstrap.min.js "></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript " src="/js/mdb.min.js "></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/0.1.12/wow.min.js"></script>

  <script>
    $(document).ready(function () {

    });

    //Notification 
    toastr.options = {
      "closeButton": true,
      "debug": true,
      "newestOnTop": true,
      "progressBar": true,
      "positionClass": "md-toast-top-center",
      "preventDuplicates": true,
      "onclick": null,
      "showDuration": 300,
      "hideDuration": 1000,
      "timeOut": 5000,
      "extendedTimeOut": 1000,
      "showEasing": "swing",
      "hideEasing": "linear",
      "showMethod": "fadeIn",
      "hideMethod": "fadeOut"
    }


    switch (window.location.search) {
      case '?alert=wrong-password':
        $('#wrong-password').prop("hidden", false)
        toastr.error('รหัสผ่านของคุณไม่ถูกต้อง');
        break
      case '?alert=wrong-phone':
        toastr.error('เบอร์มือถือของคุณไม่ถูกต้อง');
        break
      case '?alert=error-phone':
        toastr.error('เบอร์มือถือของคุณไม่สามารถส่ง OTP ได้');
        break
      case '?alert=already-phone':
        toastr.warning('เบอร์มือถือของคุณถูกใช้แล้ว');
        break
      case '?alert=success-register':
        toastr.success('เบอร์มือถือของคุณลงทะเบียนเสร็จสิ้น');
        break
      case '?alert=success-phone':
        toastr.success('ส่ง OTP เสร็จสิ้นโปรดตรวจสอบ sms');
        break
    }

    // initialize scrollspy
    $('body').scrollspy({
      target: '.dotted-scrollspy'
    });

    // initialize lightbox
    $(function () {

      $("#mdb-lightbox-ui ").load("mdb-addons/mdb-lightbox-ui.html ");
    });

    /* WOW.js init */
    new WOW().init();

    $('.navbar-collapse a').click(function () {
      $(".navbar-collapse ").collapse('hide');
    });

  </script>

</body>

</html>